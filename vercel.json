{
    "rewrites": [
        {
            "source": "/menu.html",
            "destination": "/menu/"
        },
        {
            "source": "/contact.html",
            "destination": "/contact/"
        }
    ],
    "redirects": [
        {
            "source": "/menu",
            "destination": "/menu/",
            "permanent": true
        },
        {
            "source": "/contact",
            "destination": "/contact/",
            "permanent": true
        },
        {
            "source": "/(.*[^/])",
            "destination": "/$1/",
            "permanent": true
        }
    ]
}